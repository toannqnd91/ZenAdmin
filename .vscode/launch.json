{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Nuxt Dev Server (Inspect)",
      "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs",
      "args": ["dev"],
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["--inspect=9229"],
      "env": { "NODE_OPTIONS": "--enable-source-maps", "FORCE_COLOR": "1" },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "autoAttachChildProcesses": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach 9229",
      "port": 9229,
      "restart": true,
      "autoAttachChildProcesses": true
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Client (http://localhost:3000)",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Nuxt Full (Server+Client)",
      "configurations": [
  "Nuxt Dev Server (Inspect)",
        "Debug Client (http://localhost:3000)"
      ]
    }
  ]
}
